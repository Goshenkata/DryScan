{
  "name": "@dryscan/cli",
  "version": "0.1.0",
  "description": "CLI tool for DryScan - semantic code duplication analyzer",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "dryscan": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/templates && cp src/templates/report.hbs dist/templates/report.hbs",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node ./dist/cli.js",
    "prepare": "npm run build",
    "test": "echo \"No tests for CLI yet\"",
    "coverage": "echo \"No coverage for CLI yet\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "code-analysis",
    "duplication-detection"
  ],
  "author": "Goshenkata",
  "license": "MIT",
  "dependencies": {
    "@dryscan/core": "file:../core",
    "commander": "^12.0.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/handlebars": "^4.1.0"
  }
}