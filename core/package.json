{
  "name": "@dryscan/core",
  "version": "0.1.0",
  "description": "Core library for DryScan - semantic code duplication analyzer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --sourcemap --clean --outDir dist",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "tsx ../node_modules/mocha/bin/mocha \"test/**/*.test.mjs\"",
    "coverage": "c8 tsx ../node_modules/mocha/bin/mocha \"test/**/*.test.mjs\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "code-analysis",
    "duplication-detection",
    "semantic-analysis"
  ],
  "author": "Goshenkata",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.0.0",
    "chai": "^5.3.3",
    "mocha": "^10.8.2",
    "sinon": "^17.0.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@langchain/core": "^1.1.8",
    "@langchain/ollama": "^1.1.0",
    "better-sqlite3": "^12.3.0",
    "debug": "^4.3.4",
    "jsonschema": "^1.5.0",
    "langchain": "^1.2.3",
    "minimatch": "^9.0.5",
    "reflect-metadata": "^0.2.0",
    "short-uuid": "^5.2.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-python": "^0.21.0",
    "typeorm": "^0.3.20",
    "upath": "^2.0.1"
  }
}
