{
  "name": "@goshenkata/dryscan-core",
  "version": "1.0.6",
  "description": "Core library for DryScan - semantic code duplication analyzer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --sourcemap --clean --outDir dist",
    "clean": "rm -rf dist",
    "test": "tsx ../node_modules/mocha/bin/mocha \"test/**/*.test.mjs\"",
    "coverage": "c8 tsx ../node_modules/mocha/bin/mocha \"test/**/*.test.mjs\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "code-analysis",
    "duplication-detection",
    "semantic-analysis"
  ],
  "author": "Goshenkata",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.3",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@langchain/core": "^1.1.8",
    "@langchain/google-genai": "^2.1.3",
    "@langchain/ollama": "^1.1.0",
    "better-sqlite3": "^12.5.0",
    "debug": "^4.4.3",
    "glob-gitignore": "^1.0.15",
    "ignore": "^7.0.5",
    "jsonschema": "^1.5.0",
    "langchain": "^1.2.3",
    "minimatch": "^10.1.1",
    "reflect-metadata": "^0.2.2",
    "short-uuid": "^6.0.3",
    "tree-sitter": "^0.25.0",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-python": "^0.25.0",
    "typeorm": "^0.3.28",
    "upath": "^2.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
