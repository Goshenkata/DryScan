{
  "name": "dryscan",
  "displayName": "DryScan",
  "description": "A Semantic Code Duplication Detector",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "dryscan.init",
        "title": "Initialise DryScan",
        "category": "DryScan"
      },
      {
        "command": "dryscan.refreshView",
        "title": "‚ü≥",
        "category": "DryScan"
      },
      {
        "command": "dryscan.openPair",
        "title": "Open Duplicate Pair",
        "category": "DryScan"
      },
      {
        "command": "dryscan.excludePair",
        "title": "Exclude",
        "category": "DryScan",
        "icon": {
          "light": "src/media/close-inline-light.svg",
          "dark": "src/media/close-inline-dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dryscanContainer",
          "title": "DryScan",
          "icon": "src/media/logo.svg"
        }
      ]
    },
    "views": {
      "dryscanContainer": [
        {
          "id": "dryscanView",
          "name": "DryScan",
          "icon": "src/media/logo.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dryscan.refreshView",
          "when": "view == dryscanView",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ],
      "view/item/context": [
        {
          "command": "dryscan.excludePair",
          "when": "view == dryscanView && viewItem == dryscan.duplicatePair",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "mocha \"out/test/**/*.js\""
  },
  "dependencies": {
    "@goshenkata/dryscan-core": "^1.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "mocha": "^10.8.2",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}